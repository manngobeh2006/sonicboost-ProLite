{
  "cli": {
    "version": ">= 14.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": "22.12.0",
      "npm": {
        "installCommand": "npm ci"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "preview": {
      "distribution": "internal",
      "node": "22.12.0",
      "npm": {
        "installCommand": "npm ci"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview-aab": {
      "distribution": "internal",
      "npm": {
        "installCommand": "npm ci"
      },
      "android": {
        "buildType": "app-bundle"
      }
    },
    "production": {
      "npm": {
        "installCommand": "npm ci"
      },
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      }
    }
  }
}
